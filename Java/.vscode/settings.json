{
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 24,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.openSideBySideDirection": "down",
    "workbench.editor.openPositioning": "last",
    "explorer.sortOrder": "type",
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.scrollPredominantAxis": false,
    "editor.fontFamily": "'Fira Code', 'Noto Sans CJK', monospace",
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,
    "editor.scrollOnMiddleClick": true,
    "editor.autoIndentOnPaste": true,
    "editor.tabCompletion": "on",
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.suggest.enabled": true,
    "git.autofetch": true,
    "dateTime.showAMPM": true,
    "dateTime.showDayOfMonth": true,
    "dateTime.showDayOfWeek": true,
    "dateTime.showMonth": true,
    "dateTime.showSeconds": true,
}
